{% extends 'front/base.html.twig' %}

{% block title %}Recherche - {{ parent() }}{% endblock %}

{% block content %}
<div class="mb-8">
  <h1 class="text-3xl font-bold mb-2 text-gray-800">
    {% if query %}
      Résultats de recherche pour "{{ query }}"
    {% else %}
      Recherche
    {% endif %}
  </h1>
  {% if query %}
    <p class="text-gray-600">{{ posts|length }} résultat(s) trouvé(s)</p>
  {% endif %}
</div>

{% if query %}
  {% if posts %}
    <div class="grid grid-cols-1 gap-6">
      {% for post in posts %}
        <article class="card bg-white shadow-sm hover:shadow-md transition-all duration-300 rounded-lg overflow-hidden">
          {% if post.featuredImageUrl %}
            <figure class="h-48 overflow-hidden">
              <img src="{{ post.featuredImageUrl }}" alt="{{ post.title }}" class="w-full h-full object-cover" />
            </figure>
          {% endif %}
          <div class="card-body p-5">
            <div class="flex flex-wrap gap-2 mb-3">
              {% for category in post.categories %}
                <a href="{{ path('app_category_show', {'slug': category.slug}) }}" class="category-badge text-xs px-2 py-1 rounded-full">
                  {{ category.name }}
                </a>
              {% endfor %}
            </div>
            <h2 class="card-title text-lg font-semibold m-0">
              <a href="{{ path('app_post_show', {'slug': post.slug}) }}" class="link link-hover text-gray-800 hover:text-blue-600">
                {{ post.title }}
              </a>
            </h2>
            {% if post.excerpt %}
              <p class="text-gray-600 text-sm mt-2">{{ post.excerpt|slice(0, 150) }}{% if post.excerpt|length > 150 %}...{% endif %}</p>
            {% endif %}
            <div class="card-actions justify-between items-center mt-4">
              <div class="text-xs text-gray-500">
                Publié le {{ post.publishedAt ? post.publishedAt|date('d/m/Y') : post.createdAt|date('d/m/Y') }}
              </div>
              <a href="{{ path('app_post_show', {'slug': post.slug}) }}" class="btn btn-sm btn-outline btn-primary">
                Lire +
              </a>
            </div>
          </div>
        </article>
      {% endfor %}
    </div>
  {% else %}
    <div class="text-center py-12">
      <i class="fas fa-search text-5xl text-gray-200 mb-4"></i>
      <h3 class="text-xl font-bold mb-2">Aucun résultat trouvé</h3>
      <p class="text-gray-500">Votre recherche "{{ query }}" n'a donné aucun résultat. Essayez avec d'autres termes.</p>
    </div>
  {% endif %}
{% else %}
  <div class="text-center py-12">
    <i class="fas fa-search text-5xl text-gray-200 mb-4"></i>
    <h3 class="text-xl font-bold mb-2">Rechercher des articles</h3>
    <p class="text-gray-500">Utilisez le formulaire ci-dessus pour rechercher des articles dans notre blog.</p>
  </div>
{% endif %}
{% endblock %}