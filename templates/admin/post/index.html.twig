{% extends 'admin/base.html.twig' %}

{% block admin_content %}
<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-800">Articles</h1>
  <a href="{{ path('admin_post_new') }}" class="btn btn-primary">
    <i class="fas fa-plus mr-2"></i>
    Nouvel article
  </a>
</div>

<div class="bg-white rounded-lg shadow-sm overflow-hidden">
  <div class="overflow-x-auto">
    <table class="table table-zebra w-full">
      <thead class="bg-gray-100">
        <tr>
          <th>Titre</th>
          <th>Catégories</th>
          <th>Statut</th>
          <th>Date de création</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for post in posts %}
          <tr class="hover:bg-gray-50">
            <td>
              <div class="font-medium text-gray-800">{{ post.title }}</div>
              {% if post.excerpt %}
                <div class="text-sm text-gray-500 mt-1">{{ post.excerpt|slice(0, 100) }}{% if post.excerpt|length > 100 %}...{% endif %}</div>
              {% endif %}
            </td>
            <td>
              {% for category in post.categories %}
                <span class="badge badge-outline mr-1">{{ category.name }}</span>
              {% endfor %}
            </td>
            <td>
              {% if post.status == 'published' %}
                <span class="badge badge-success">Publié</span>
                {% if post.publishedAt %}
                  <div class="text-xs text-gray-500">{{ post.publishedAt|date('d/m/Y') }}</div>
                {% endif %}
              {% else %}
                <span class="badge badge-warning">Brouillon</span>
              {% endif %}
            </td>
            <td>{{ post.createdAt|date('d/m/Y H:i') }}</td>
            <td>
              <div class="flex flex-wrap gap-2">
                {% if post.status != 'published' %}
                  <form method="post" action="{{ path('admin_post_publish', {'id': post.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir publier cet article ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('publish' ~ post.id) }}">
                    <button type="submit" class="btn btn-xs btn-success">
                      <i class="fas fa-check mr-1"></i>
                      Publier
                    </button>
                  </form>
                {% endif %}
                <a href="{{ path('admin_post_edit', {'id': post.id}) }}" class="btn btn-xs btn-info">
                  <i class="fas fa-edit mr-1"></i>
                  Modifier
                </a>
                <form method="post" action="{{ path('admin_post_delete', {'id': post.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?');">
                  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                  <button type="submit" class="btn btn-xs btn-error">
                    <i class="fas fa-trash mr-1"></i>
                    Supprimer
                  </button>
                </form>
              </div>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="5" class="text-center py-8 text-gray-500">Aucun article trouvé</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}