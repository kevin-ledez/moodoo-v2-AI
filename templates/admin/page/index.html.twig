{% extends 'admin/base.html.twig' %}

{% block title %}Pages - Administration{% endblock %}

{% block admin_content %}
<div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Gestion des pages</h1>
    <a href="{{ path('admin_page_new') }}" class="btn btn-primary">
        <i class="fas fa-plus mr-2"></i>
        Créer une nouvelle page
    </a>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="table w-full">
        <thead>
            <tr class="bg-gray-100">
                <th class="p-3 text-left">Titre</th>
                <th class="p-3 text-left">Slug</th>
                <th class="p-3 text-left">Afficher dans le menu</th>
                <th class="p-3 text-left">Date de création</th>
                <th class="p-3 text-left">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr class="border-b hover:bg-gray-50">
                <td class="p-3 font-medium">{{ page.title }}</td>
                <td class="p-3">{{ page.slug }}</td>
                <td class="p-3">
                    {% if page.showInMenu %}
                        <span class="badge badge-success">Oui</span>
                    {% else %}
                        <span class="badge badge-error">Non</span>
                    {% endif %}
                </td>
                <td class="p-3">{{ page.createdAt ? page.createdAt|date('d/m/Y H:i') : '' }}</td>
                <td class="p-3">
                    <div class="flex space-x-2">
                        <a href="{{ path('admin_page_show', {'id': page.id}) }}" class="btn btn-sm btn-outline">
                            <i class="fas fa-eye mr-1"></i>
                            Voir
                        </a>
                        <a href="{{ path('admin_page_edit', {'id': page.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fas fa-edit mr-1"></i>
                            Modifier
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="p-3 text-center">Aucune page trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}