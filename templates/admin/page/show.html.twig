{% extends 'admin/base.html.twig' %}

{% block title %}Page - Administration{% endblock %}

{% block admin_content %}
<div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Détails de la page</h1>
    <a href="{{ path('admin_page_index') }}" class="btn btn-outline">
        <i class="fas fa-arrow-left mr-2"></i>
        Retour à la liste
    </a>
</div>

<div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            <h2 class="text-lg font-semibold text-gray-700 mb-2">Titre</h2>
            <p class="text-gray-900">{{ page.title }}</p>
        </div>
        
        <div>
            <h2 class="text-lg font-semibold text-gray-700 mb-2">Slug</h2>
            <p class="text-gray-900">{{ page.slug }}</p>
        </div>
        
        <div>
            <h2 class="text-lg font-semibold text-gray-700 mb-2">Afficher dans le menu</h2>
            <p class="text-gray-900">
                {% if page.showInMenu %}
                    <span class="badge badge-success">Oui</span>
                {% else %}
                    <span class="badge badge-error">Non</span>
                {% endif %}
            </p>
        </div>
        
        <div>
            <h2 class="text-lg font-semibold text-gray-700 mb-2">Date de création</h2>
            <p class="text-gray-900">{{ page.createdAt ? page.createdAt|date('d/m/Y H:i') : '' }}</p>
        </div>
    </div>
    
    <div class="mt-6">
        <h2 class="text-lg font-semibold text-gray-700 mb-2">Contenu</h2>
        <div class="border rounded p-4 bg-gray-50">
            {{ page.content|raw }}
        </div>
    </div>
</div>

<div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-lg font-bold text-gray-800 mb-4">Actions</h2>
    <div class="flex space-x-2">
        <a href="{{ path('admin_page_edit', {'id': page.id}) }}" class="btn btn-primary">
            <i class="fas fa-edit mr-2"></i>
            Modifier
        </a>
        {{ include('admin/page/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}